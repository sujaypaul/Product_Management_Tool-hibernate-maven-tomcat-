<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/products_db?jdbcCompliantTruncation=false</property>
		
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="connection.pool_size">50</property>

		<property name="show_sql">true</property>

		<property name="hbm2ddl.auto">update</property>

		<property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>

		<mapping
			class="com.nagarro.training.AdvancedJavaAssignment3.models.Users" />
		<mapping
			class="com.nagarro.training.AdvancedJavaAssignment3.models.Products" />
	</session-factory>
</hibernate-configuration>